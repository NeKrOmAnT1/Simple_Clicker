<Window x:Class="Indifference.windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indifference.windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"

        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите имя пользователя: " FontSize="30" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Height="35" Width="568"  />
            <Button x:Name="btn_save" Content="Сохранить" Click="btn_save_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
