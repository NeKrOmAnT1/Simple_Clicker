<Window x:Class="Indifference.windows.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indifference.windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <Label x:Name="timeLabel" Content="00:00" FontSize="20" HorizontalAlignment="Center"  VerticalAlignment="Bottom"/>

        <TextBlock x:Name="score" FontSize="25" FontFamily="Comic Sans MS" Width="auto"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="32"/>
        <Button x:Name="exit" Click="exit_Click" Content="Выйти" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Canvas Margin="30" x:Name="canvas">
            <Button Name="button" Width="100" Height="100"  Background="Red" Click="button_Click"/>
        </Canvas>
    </Grid>
</Window>
