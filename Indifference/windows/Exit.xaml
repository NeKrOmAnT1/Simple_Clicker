<Window x:Class="Indifference.windows.Exit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indifference.windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Exit" Height="200" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <TextBlock Text="Вы уверены, что хотите выйти?" HorizontalAlignment="Center" FontSize="30"/>
        <Button x:Name="btn_yes" Click="btn_yes_Click" Content="Да" Width="100" Margin="140,0,0,0" />
        <Button x:Name="btn_no" Click="btn_no_Click" Content="Нет" Width="100" Margin="272,0,0,0" />
    </Grid>
</Window>
