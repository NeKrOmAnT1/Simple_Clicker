<Window x:Class="Indifference.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indifference"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <StackPanel Margin="100" HorizontalAlignment="Center" >
            <Button x:Name="btn_go" Click="btn_go_Click"  Content="Начать" Width="200" Margin="5" />
            <Button x:Name="btn_settings" Click="btn_settings_Click"  Content="Настройки" Width="200" Margin="5"/>
            <Button x:Name="btn_help" Content="Служба поддержки" Width="200" Margin="5"/>
            <Button x:Name="btn_exit" Click="btn_exit_Click" Content="Выйти" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
